extends Layout

block content
    h1 Here's what you've accomplished 🥳
    small
        a(href="/log") 👉 #{text.log_new}
    br
    small
        a(href="/habits") 👉 #{text.manage}
    br
    br
    h2 Total 💸: #{currencySymbol}#{totalCash}
    each accomplishment in accomplishments
        div(class="accomplishment-item")
            p #{accomplishment.name}
            p 💸 #{accomplishment.value}
            form(action="remove-accomplishment" method="post")
                input(class="hidden" type="text" name=`${accomplishment.id}`)
                button(type="submit" class="remove-button" style="width: 60px") Remove
            small ⏰ #{accomplishment.getSince()}
